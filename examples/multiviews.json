{
    "data" : {
        "url": "data/NatalityUSA2015Dec.csv",
        "format": "csv",
        "schema": {
            "BirthMonth"   : "int",
            "BabyGender"   : "string",
            "BabyWeight"   : "float",
            "MotherAge"    : "int",
            "MotherRace"   : "string",
            "MotherStatus" : "string",
            "MotherEdu"    : "string",
            "MotherHeight" : "float",
            "MotherWeight" : "float",
            "MotherWgtGain": "float"
        }
    },
    "views": [
        {
            "id": "c1",
            "width": 360,
            "height": 360,
            "padding": {"left": 50, "right": 10, "top": 10, "bottom": 50},
            "offset": [380, 0]
        },
        {
            "id": "c2",
            "width": 360,
            "height": 360,
            "padding": {"left": 120, "right": 10, "top": 10, "bottom": 50},
            "offset": [0, 0]
        }
    ],
    "operations": [
        {
            "$visualize": {
                "id": "c1",
                "mark": "circle",
                "size": 8,
                "color": "red",
                "opacity": "auto",
                "x": "MotherWeight",
                "y": "BabyWeight"
            }
        },
        {
            "$aggregate" : {
                "$group": "MotherEdu",
                "$reduce" : {
                    "Babies": { "$count": "*"},
                    "AvgWeight": { "$avg": "BabyWeight"}
                }
            }
        },
        {
            "$visualize": {
                "id": "c2",
                "mark": "bar",
                "color": "steelblue",
                "y": "MotherEdu",
                "width": "Babies"
            }
        },
        {
            "$interact": {
                "event": "brush",
                "from": "c1",
                "response" : {
                    "c1": {
                        "unselected": {"color": "#777777"}
                    },
                    "c2": {
                        "selected": {"color": "orange"}
                    }
                }
            }
        }
    ]
}
